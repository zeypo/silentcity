{{!< default}}

{{#post}}

    <article id="post-{{id}}" class="post type-post entry has-meta has-share">
        <header class="entry-header">
            <h1 class="entry-title">{{title}}</h1>
        </header>

        <div class="entry-content">
	     {{#if image}}
         	 <img src="{{image}}" class="entry-content-image" alt="{{title}}">
            {{/if}}
            {{content}}
        </div>

        <footer class="entry-meta">
            <div class="entry-meta-wrap">

                <div class="entry-meta-author">
                    {{#author}}
                        <img src="{{image}}" alt="{{name}}" class="meta-avatard">
                        <div class="author-block">
                            <span class="name">{{name}}</span>
                            <p>{{bio}}</p>
                        </div>
                    {{/author}}
                </div>

                <div class="entry-meta-items">
                    <div class="entry-meta-item entry-date">
                        <span class="entry-meta-title">Published:</span>
                        <span class="entry-date-published">
                            <time datetime="{{date published_at format="MMMM DD, YYYY"}}">
                                {{date published_at format="MMMM DD, YYYY"}}
                            </time>
                        </span>
                    </div>

                    {{#if tags}}
                    <div class="entry-meta-item entry-tags">
                        <span class="entry-meta-title">Tags:</span>
                        <span class="entry-tags-links">
                            {{ tags separator = " " }}
                        </span>
                    </div>
                    {{/if}}

                </div>

                {{> share-widget}}

            <div id="disqus_thread"></div>
        </div>
    </footer>

